@page
@model Blog.Areas.Categories.Pages.DetailsModel

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Details</title>
</head>
<body>

<div>
    <h4>Category</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Category.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Category.Name)
        </dd>
        @if (@Model.Category.CategoryImage is not null)
        {
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Category.CategoryImage)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Category.CategoryImage)
            </dd>
        }
    </dl>
    @if (@Model.Category.Articles.Any())
    {
        <div class="container mt-4 p-4">
            @foreach (var article in @Model.Category.Articles)
            {
                <p>
                    <a asp-area="Articles" asp-page="./Details" asp-route-id="@article.Id">
                        @article.Title    
                    </a>
                </p>
            }
        </div>    
    }
</div>

<div>
    <a asp-page="./Edit" asp-route-id="@Model.Category?.Id">Edit</a> |
    <a asp-page="./Index">Back to List</a>
</div>
</body>
</html>
