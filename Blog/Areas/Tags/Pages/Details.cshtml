@page
@model Blog.Areas.Tags.Pages.DetailsModel

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Details</title>
</head>
<body>

<div>
    <h4>Tag</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Tag.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Tag.Name)
        </dd>
    </dl>
    @if (@Model.Tag.Articles.Any())
    {
        <div class="container mt-4 p-4">
            @foreach (var article in @Model.Tag.Articles)
            {
                <p>
                    <a asp-area="Articles" asp-page="./Details" asp-route-id="@article.Id">
                        @article.Title    
                    </a>
                </p>
            }
        </div>    
    }
</div>
<div>
    <a asp-page="./Edit" asp-route-id="@Model.Tag?.Id">Edit</a> |
    <a asp-page="./Index">Back to List</a>
</div>
</body>
</html>
